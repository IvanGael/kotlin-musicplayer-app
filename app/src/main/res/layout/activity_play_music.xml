<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bgd"
    tools:context=".PlayMusicActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Someone like you"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textAllCaps="true"
        android:id="@+id/txt_song_title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adele"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="4dp"
        android:textAllCaps="true"
        android:id="@+id/txt_song_artist"/>
    
    <ImageView
        android:layout_width="300dp"
        android:layout_height="280dp"
        android:src="@drawable/music_icon"
        android:layout_marginTop="15dp"
        android:background="@drawable/bgd_music"
        android:scaleType="centerCrop"
        android:padding="24dp"
        app:tint="@color/white" />
    
    <SeekBar
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:thumbTint="@color/white"
        android:progressTint="@color/white"
        android:id="@+id/seekbar_song_control"/>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@color/white"
            android:id="@+id/txt_song_start"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@color/white"
            android:layout_alignParentEnd="true"
            android:id="@+id/txt_song_end"/>

    </RelativeLayout>

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/play_icon"
        app:backgroundTint="@color/white"
        android:layout_marginTop="40dp"
        android:id="@+id/play_button"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_volume_down"
            android:tint="@color/white"
            android:layout_weight="1"/>

        <SeekBar
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:thumbTint="@color/white"
            android:progressTint="@color/white"
            android:layout_weight="1"
            android:id="@+id/seekbar_volume_control"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_volume_up"
            android:tint="@color/white"
            android:layout_weight="1"/>

    </LinearLayout>



</LinearLayout>